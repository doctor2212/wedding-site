<% layout("/layouts/boilerplate") %>
<div class="container d-flex justify-content-center pt-3">
    <div class="card" style="width: 25rem;">
        <img src="https://images.unsplash.com/photo-1509822929063-6b6cfc9b42f2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8bG9naW58ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
            class="card-img-top">
        <div class="card-body">
            <h5 class="card-title">Register</h5>
            <form action="/register" method="POST" class="needs-validation" novalidate>
                <div class="mb-3 form-floating">
                    <input type="text" class="form-control" id="username" name="username" placeholder="John" required>
                    <label for="username" class="form-label">Username</label>
                    <div class="form-text">Your username will be your first name</div>
                </div>
                <div class="mb-3 form-floating">
                    <input type="password" class="form-control" placeholder="password" name="password" id="password" required>
                    <label for="password" class="form-label">Password</label>
                    <div class="form-text">You should have recieved your password with your invite</div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>